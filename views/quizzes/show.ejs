
<h1>
    Show question:
</h1>


<div class="quizItem">
<div>
<% var attachment = quiz.attachment; %>
<% include ../attachments/_show %>
</div>

<ul>
    <li>Question: <b><%= quiz.question %></b></li>
    <li>Answer: <b><%= quiz.answer %></b></li>
</ul>
<div class="right">
    <small> (by <%= quiz.author ? quiz.author.username : "Anonymous" %>) </small>
</div>
<% include ../favourites/_stars %>
</div>
<a href="/goback"><button>Go back</button></a>

<h1>
    Tips:
</h1>

<% if (session.user) { %>
    <% include ../tips/new %>
<% } %>

<% var tips = quiz.tips; %>
<% var quizId = quiz.id; %>
<% var quizAuthorId = quiz.authorId; %>
<% include ../tips/index %>


<a href="/quizzes"><button>Go back</button></a>
